<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFDF6">

    <!-- Header FIXO no topo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="#FFFDF6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/btnVoltar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voltar"
                android:textColor="#2D4A33"
                android:background="@drawable/bg_button_primary"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Meus Produtos"
                android:textSize="20sp"
                android:textColor="#2D4A33"
                android:textStyle="bold"
                android:gravity="center" />

            <View
                android:layout_width="24dp"
                android:layout_height="24dp" />
        </LinearLayout>

        <!-- Botão Novo Produto -->
        <Button
            android:id="@+id/btnNovoProduto"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:text="➕ Novo Produto"
            android:textSize="16sp"
            android:textColor="#2D4A33"
            android:background="@drawable/bg_button_primary"
            android:layout_marginBottom="16dp" />

        <!-- Mensagem quando não há produtos -->
        <TextView
            android:id="@+id/txtSemProdutos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nenhum produto cadastrado\nClique no + para adicionar seu primeiro produto"
            android:textSize="16sp"
            android:textColor="#666666"
            android:gravity="center"
            android:padding="40dp"
            android:visibility="visible" />

    </LinearLayout>

    <!-- RecyclerView ocupa o restante da tela e faz sua própria rolagem -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewProdutos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone" />

</LinearLayout>