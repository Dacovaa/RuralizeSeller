<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Ruralize" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@color/bg_cream</item>
        <item name="android:navigationBarColor">@color/bg_cream</item>
        <item name="android:statusBarColor">@color/bg_cream</item>

        <!-- Cores principais do tema -->
        <item name="colorPrimary">@color/green_dark</item>
        <item name="colorPrimaryVariant">@color/green_mid</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/green_mid</item>
        <item name="colorSecondaryVariant">@color/green_light</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorTertiary">@color/green_light</item>
        <item name="colorOnTertiary">@color/green_dark</item>

        <item name="android:colorBackground">@color/bg_cream</item>
        <item name="colorOnBackground">@color/green_dark</item>

        <item name="colorSurface">@color/bg_cream</item>
        <item name="colorOnSurface">@color/green_dark</item>

        <!-- Estilos componentes -->
        <item name="materialButtonStyle">@style/Ruralize.Button</item>
        <item name="textInputStyle">@style/Ruralize.TextInput</item>
        <item name="bottomNavigationStyle">@style/Ruralize.BottomNavigation</item>

        <!-- Cores para componentes -->
        <item name="colorControlActivated">@color/green_dark</item>
        <item name="colorControlHighlight">@color/green_light</item>
    </style>

    <style name="Ruralize.Button" parent="Widget.Material3.Button">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/green_light</item>
        <item name="android:textColor">@color/green_dark</item>
    </style>

    <style name="Ruralize.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/green_mid</item>
        <item name="rippleColor">@color/green_light</item>
    </style>

    <style name="Ruralize.Headline" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/green_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Ruralize.TextInput" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusTopStart">14dp</item>
        <item name="boxCornerRadiusTopEnd">14dp</item>
        <item name="boxCornerRadiusBottomStart">14dp</item>
        <item name="boxCornerRadiusBottomEnd">14dp</item>
        <item name="boxStrokeColor">@color/green_light</item>
        <item name="android:textColorHint">@color/green_mid</item>
        <item name="cursorColor">@color/green_dark</item>
        <!-- Remove os atributos problemÃ¡ticos -->
    </style>

    <style name="Ruralize.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="itemBackground">@color/bg_cream</item>
        <item name="itemTextColor">@color/green_dark</item>
        <item name="itemIconTint">@color/green_dark</item>
        <item name="itemRippleColor">@color/green_light</item>
    </style>

    <!-- Estilos simplificados para componentes -->
    <style name="Ruralize.Checkbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/green_dark</item>
    </style>

    <style name="Ruralize.RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:buttonTint">@color/green_dark</item>
    </style>

    <style name="Ruralize.Switch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:trackTint">@color/green_light</item>
        <item name="android:thumbTint">@color/green_dark</item>
    </style>
</resources>