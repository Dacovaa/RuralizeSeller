        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ruralize"
        >
        <activity
            android:name=".Activity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Ruralize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CadastroActivity"
            android:exported="false" />

        <activity
            android:name=".RecuperacaoSenhaActivity"
            android:exported="false" />

        <activity
            android:name=".DashboardActivity"
            android:exported="false" />

        <activity
            android:name=".GerenciarProdutosActivity"
            android:exported="false" />
        <activity
            android:name=".NovoProdutoActivity"
            android:exported="false"
            android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar" />
        <activity
            android:name=".MinhaContaActivity"
            android:exported="false" />
        <activity
            android:name=".EstoqueActivity"
            android:exported="false" />
        <activity
            android:name=".VendasActivity"
